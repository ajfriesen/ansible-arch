{
    "audio": "pipewire",
    "bootloader": "systemd-bootctl",
    "custom-commands": [
        "usermod -aG docker devel",
        ""
    ],
    "!encryption-password": "supersecret",
    "filesystem": "btrfs",
    "gfx_driver": "VMware / VirtualBox (open-source)",
    "harddrive": {
        "path": "/dev/nvme0n1"
    },
    "hostname": "starlite",
    "kernels": [
        "linux",
        "linux-lts"
    ],
    "keyboard-language": "us",
    "mirror-region": "Germany",
    "nic": {
        "NetworkManager": true
    },
    "ntp": true,
    "packages": ["docker", "git", "ansible",  "wget", "zsh"],
    "profile": "gnome",
    "services": ["docker"],
    "superusers": {
        "devel": {
            "!password": "devel"
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Europe/Berlin",
    "users": {}
}