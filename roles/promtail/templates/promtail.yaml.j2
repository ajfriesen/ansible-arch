server:
  http_listen_port: 0
  grpc_listen_port: 0

positions:
  filename: /var/lib/promtail/positions.yml

client:
  url: '{{lookup('env','GRAFANA_CLOUD_LOKI_ENDPOINT')}}'


scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: pacman-logs
      __path__: /var/log/pacman.log
      hostname: {{ ansible_nodename }}
